<% message_class_name =  'self' %>

<li class="<%=  message_class_name %>">
  <div class="avatar">
    <img src="http://placehold.it/50x50" />
  </div>

  <div class="chatboxmessagecontent">
    <p><%= message[:body] %></p>
    <time datetime="<%= Time.now %>" title="<%= Time.now.strftime("%d %b  %Y at %I:%M%p") %>">
      <%= Time.now.strftime("%H:%M %p") %>
    </time>
  </div>
</li>
