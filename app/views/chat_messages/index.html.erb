<p id="notice"><%= notice %></p>

<h1>Listing Chat Messages</h1>

<table>
  <thead>
    <tr>
      <th>Creator</th>
      <th>Body</th>
      <th>Chat</th>
      <th>Is read</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chat_messages.each do |chat_message| %>
      <tr>
        <td><%= chat_message.creator_id %></td>
        <td><%= chat_message.body %></td>
        <td><%= chat_message.chat %></td>
        <td><%= chat_message.is_read %></td>
        <td><%= link_to 'Show', chat_message %></td>
        <td><%= link_to 'Edit', edit_chat_message_path(chat_message) %></td>
        <td><%= link_to 'Destroy', chat_message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

