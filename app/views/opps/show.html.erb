<div class="brick">
    <section id="services">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading"><%= @opportunity.title %></h2>
                    <h3 class="section-subheading text-muted"> </h3>
                </div>
            </div>

            <div class="tabcontents">
                <div class="row">
                    <div class="col-md-1">
                    </div>
                    <div class="col-md-10">
                        <h2 class="section-subheading">Opportunity Info</h2>
                        <br>
                        <p class="course"><strong> Description: </strong><%= @opportunity.text %></p>
                        <p class="course"><strong> Link: </strong><%= @opportunity.Link %></p>
                        
                        

                        <% if can_edit_course? %>
                        <%= link_to 'Edit', edit_opp_path(@opportunity) %>
                        <% end %>

                        <% if can_delete_course? %>
                        <%= link_to 'Delete', opp_path(@opportunity), method: :delete, data: { confirm: 'Are you sure you want to delete this course?' } %>
                        <% end %>

                    </div>
                    <div class="col-md-1">
                    </div>
                </div>
            </div>
            <br>
            <%= link_to 'Back', opps_path %>
        </div>
    </section>
</div>
