    <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading"><%= @opportunity.title %></h2>
                <h3 class="section-subheading text-muted"> </h3>
            </div>
    </div>
    <% if can_edit_course? %>
        <%= link_to 'Edit', edit_opp_path(@opportunity) %>
    <% end %>

    <% if can_delete_course? %>
      <%= link_to 'Delete', opp_path(@opportunity), method: :delete, data: { confirm: 'Are you sure you want to delete this course?' } %>
    <% end %>
       
      