<!DOCTYPE html>
<html lang="en">



<head>
	
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>My Opportunities</title>

    <!-- Bootstrap Core CSS -->
    <link href="vendor/assets/stylesheets/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="vendor/assets/stylesheets/heroic-features.css" rel="stylesheet">
	
	
    
</head>

<body>


    <!-- Page Content -->
    <div class="container">
    	
		<class="jumbotron">
			
		    <div class="container">
		        <div class="intro-text">
		        	<h1>Explore Opportunities</h1>

		            <div class="big-space"></div>
		        </div>
		    </div>
		</div>
		
        
        <hr>
        <!-- Title -->
        <div class="row">
            <div class="col-lg-12">
                <h3>All Opportunities</h3>
                <p>To succeed, jump as quickly at opportunities as you do at conclusions. -Benjamin Franklin</p>
                <% if can_create? %>
					<%= link_to 'New Opportunity', new_opp_path, class: "btn btn-primary" %>
   			    <% end %>
            </div>
            
        </div>
        <!-- /.row -->

        <!-- Page Features -->
        <div class="row text-center">
		  <% @opportunities.each do |opp| %>
            <div class="col-md-3 col-sm-6 hero-feature">
                <div class="thumbnail">
                    <img src="../img/inspire.jpeg" alt="">
                    <div class="caption">
                        <h3><%=opp.title%></h3>
                        <p>opp.text</p>
                        
                        <% opp_id = opp.id.to_s %>
                        <% link = "/opps/" + opp_id %>
                        <p>
                        	
                           <a href=<%= "#{link}" %> class="btn btn-default">More Info</a>
                        </p>
                    </div>
                </div>
            </div>
          <% end %>
        </div>
        <!-- /.row -->

        <hr>


    </div>
    <!-- /.container -->

    <!-- jQuery -->
    <script src="vendor/assets/javascripts/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="vendor/assets/javascripts/bootstrap.min.js"></script>

</body>

</html>

