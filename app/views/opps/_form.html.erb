<div class="row">
  <div class="col-md-3">
    </div>
        <div class="col-md-6">
          <%= form_for @opportunity do |f| %>
              
              <div class="form-group">
                  <%= f.label :title %>
                  <%= f.text_field :title, autofocus: true, class: "form-control", placeholder: "Opprtunity title *" %>
              </div>
              
               <div class="form-group">
                <%= f.label :text %>
                <%= f.text_area :text, class: "form-control", placeholder: "Opprtunity details" %>
               </div>
               
               <div class="form-group">
                <%= f.label :text %>
                <%= f.text_area :Link, class: "form-control", placeholder: "Opprtunity Link" %>
               </div>
            
              <div class="actions text-center">
                  <%= f.submit "Submit", class: "btn btn-xl" %>
              </div>

           <% end %>
        </div>
  
    <div class="col-md-3">
  </div>
</div>
